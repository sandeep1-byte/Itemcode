@model ProductDto

<div class="container mt-5">

    @if (TempData["SuccessMessage"] != null)

    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Edit" method="post" class="form-group border shadow-sm p-4 rounded" style="margin: auto; background-color: white; color: black; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">
        <h3 class="text-center mb-4">Edit Product</h3>

        <div id="success-message" class="alert alert-success d-none" role="alert">
            Product updated successfully!
        </div>

        <div class="mb-3">
            <label asp-for="ItemCode" class="form-label">Item Code</label>
            <input asp-for="ItemCode" class="form-control" placeholder="Enter Item Code" required />
            <span asp-validation-for="ItemCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter Description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter Price" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Unit" class="form-label">Unit</label>
            <input asp-for="Unit" class="form-control" placeholder="Enter Unit" required />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Item Code Category</label>
            @if (Model.Categories == null || !Model.Categories.Any())
            {
                <p>No categories available.</p>
            }
            else
            {
                <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories" required>
                    <option value="">Select a Category</option>
                </select>
            }
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Id" />

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100 py-2">Update</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<style>
    /* Enhance responsiveness */
    .container form {
        width: 100%;
        max-width: 500px; /* Restrict the max width */
    }

    /* Smooth box shadow */
    .container form {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        transition: box-shadow 0.3s ease-in-out;
    }

        .container form:hover {
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
        }

    /* Make the button full-width and attractive */
    .btn {
        border-radius: 30px;
        width: 100%;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    /* Adjust padding and spacing */
    .form-control {
        padding: 0.75rem 1.25rem;
        border-radius: 8px;
    }

    .form-label {
        font-weight: bold;
    }

    /* Set background and text color for the form */
    .form-group {
        background-color: white; /* White background */
        color: black; /* Black text */
    }
</style>
